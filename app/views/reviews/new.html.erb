<%= form_for (@review),:url => {:action => :create} do |review| %>
    <% Array(@template_items).each_with_index do |item, i| %>
        <%= review.fields_for :review_contents do |i| %>
            <%= i.text_field :text %>
            <%= i.hidden_field :template_item_id, value: item.id %>
        <% end %>
    <% end %>
    <%= review.hidden_field :user_id, value: current_user.id %>
    <%= review.hidden_field :template_id, value: params[:template_id] %>
    <%= button_tag type: "submit" do %>
        投稿する
    <% end %>
<% end %>